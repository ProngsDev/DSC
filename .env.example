# Environment Configuration for DSC Deployment
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# Private Key (without 0x prefix)
# Get this from your wallet (MetaMask, etc.)
# For testnet deployments, use a dedicated testnet wallet
PRIVATE_KEY=your_private_key_here

# RPC URLs
# Ethereum Mainnet
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your_api_key
# Alternative: https://mainnet.infura.io/v3/your_project_id

# Sepolia Testnet
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your_api_key
# Alternative: https://sepolia.infura.io/v3/your_project_id

# Etherscan API Key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key

# Optional: Gas price settings (in gwei)
# Uncomment and adjust based on network conditions
# GAS_PRICE=20

# Optional: Gas limit override
# GAS_LIMIT=3000000

# Network-specific settings
# Mainnet deployment confirmation requirements
MAINNET_CONFIRMATIONS=3

# Testnet deployment confirmation requirements  
TESTNET_CONFIRMATIONS=1

# Deployment safety settings
# Set to true to enable additional safety checks
ENABLE_SAFETY_CHECKS=true

# Verification settings
# Set to true to automatically verify contracts after deployment
AUTO_VERIFY=true

# Deployment logging
# Set to true to enable verbose logging
VERBOSE_LOGGING=true
